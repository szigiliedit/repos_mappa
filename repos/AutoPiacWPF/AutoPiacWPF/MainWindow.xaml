<Window x:Class="AutoPiacWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoPiacWPF"
        mc:Ignorable="d"
        Title="AutoPiac" Height="450" Width="800"
        Closing="MainWindow_Closing" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Fájl">
                <MenuItem Header="_Backup"/>
                <MenuItem Header="_Restore"/>
                <MenuItem Header="_Kilépés" Click="Exit">
                    <MenuItem.Icon>
                        <Image Source="Images\exit.jpg"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Adatok karbantartása">
                <MenuItem Name="mit_FelhAdatKarb" IsEnabled="False" Header="Felhasználói adatok karbantartása" Click="Felhasznalok_Karbantartasa">
                    <MenuItem.Icon>
                        <Image Source="Images\users.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
