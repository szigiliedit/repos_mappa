<Window x:Class="IskolaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IskolaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="536" Width="334">
    <Grid>
        <DataGrid x:Name="TanuloAdatTabla" HorizontalAlignment="Center" Height="410" Margin="0,10,0,0" VerticalAlignment="Top" Width="267" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="Delete" Content="Törlés" HorizontalAlignment="Left" Height="24" Margin="24,447,0,0" VerticalAlignment="Top" Width="125" Click="Delete_Click"/>
        <Button x:Name="Save" Content="Állomány mentése" HorizontalAlignment="Left" Height="24" Margin="166,447,0,0" VerticalAlignment="Top" Width="125" Click="Save_Click"/>

    </Grid>
</Window>
